<% layout('layouts/main') -%> <% stylesheet('/static/styles.css') -%>
<div class="contact-form">
  <form action="/words<%= routes.upload%>" method="post" role="form">
    <div class="controls">
      <div class="form-group">
        <p>Title</p>
        <input
          type="text"
          name="title"
          class="form-input-text form-control"
          required="required"
        />
      </div>
      <div class="form-group">
        <p>Message</p>
        <textarea
          name="text"
          class="form-input-text form-control"
          rows="4"
          required="required"
        ></textarea>
      </div>
      <div class="form-group">
        <p>Description</p>
        <input
          type="text"
          name="description"
          class="form-input-text form-control"
          required="required"
        />
      </div>
      <div class="send-button bottom-margin">
        <button type="submit" class="btn btn-send send-msg">
          Upload
        </button>
      </div>
    </div>
  </form>
</div>
