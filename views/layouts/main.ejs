<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <script
      src="https://kit.fontawesome.com/a8d1dbcb7c.js"
      crossorigin="anonymous"
    ></script>
    <title><%= siteName %></title>
    <%-stylesheets%>
    <script defer src="/static/main.js"></script>
  </head>
  <body>
    <header class="header">
      <div class="header__column-title">
        <a href="<%= routes.home %>"><h1>üç™ <%= siteName %></h1></a>
      </div>

      <div class="header__column-menu">
        <ul>
          <% if(!user.isAuthenticated){ %>
          <li><a href="<%=routes.join%>">Join</a></li>
          <li><a href="<%=routes.login%>">Login</a></li>
          <% } else{ %>
          <li><a href="/words<%= routes.upload %>">Upload</a></li>
          <li><a href="<%=routes.userDetail(user.id)%>">Profile</a></li>
          <li><a href="<%=routes.logout%>">Logout</a></li>
          <% } %>
        </ul>
      </div>
      <div class="header__column-search">
        <form action="<%=routes.search%>" , method="get">
          <input type="search" , name="term" />
        </form>
      </div>
    </header>
    <section>
      <%- body -%>
    </section>
    <footer>
      <i class="fas fa-cookie-bite"></i>
      <span class="footer__text"
        ><%= siteName %> <%= new Date().getFullYear() %></span
      >
    </footer>
  </body>
</html>
